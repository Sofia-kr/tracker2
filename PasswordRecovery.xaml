<Window x:Class="t.PasswordRecovery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Відновлення паролю" 
        Height="600" 
        Width="800"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        Loaded="Window_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#4A90E2" Padding="15">
            <TextBlock Text="ВІДНОВЛЕННЯ ПАРОЛЮ" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Основна форма -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,10">
            <Grid Margin="10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Електронна пошта -->
                <GroupBox Grid.Row="0" 
                          Header="Електронна пошта (Gmail)" 
                          FontSize="16" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,10">
                    <TextBox x:Name="txtEmail" 
                             Height="40" 
                             FontSize="14"
                             Padding="5"
                             VerticalContentAlignment="Center"
                             KeyDown="TxtEmail_KeyDown"/>
                </GroupBox>

                <!-- Питання -->
                <GroupBox Grid.Row="1" 
                          Header="Питання для відновлення" 
                          FontSize="16" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,10">
                    <TextBox x:Name="txtQuestion" 
                             Height="40" 
                             FontSize="14"
                             Padding="5"
                             VerticalContentAlignment="Center"
                             IsReadOnly="True"
                             Background="#F0F0F0"/>
                </GroupBox>

                <!-- Відповідь -->
                <GroupBox Grid.Row="2" 
                          Header="Відповідь на питання" 
                          FontSize="16" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,10">
                    <TextBox x:Name="txtAnswer" 
                             Height="40" 
                             FontSize="14"
                             Padding="5"
                             VerticalContentAlignment="Center"
                             KeyDown="TxtAnswer_KeyDown"/>
                </GroupBox>

                <!-- Новий пароль -->
                <GroupBox Grid.Row="3" 
                          Header="Новий пароль" 
                          FontSize="16" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,10">
                    <PasswordBox x:Name="txtNewPassword" 
                                 Height="40" 
                                 FontSize="14"
                                 Padding="5"
                                 VerticalContentAlignment="Center"
                                 KeyDown="TxtNewPassword_KeyDown"/>
                </GroupBox>

                <!-- Підтвердження пароля -->
                <GroupBox Grid.Row="4" 
                          Header="Підтвердіть новий пароль" 
                          FontSize="16" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,10">
                    <PasswordBox x:Name="txtConfirmPassword" 
                                 Height="40" 
                                 FontSize="14"
                                 Padding="5"
                                 VerticalContentAlignment="Center"
                                 KeyDown="TxtConfirmPassword_KeyDown"/>
                </GroupBox>

                <!-- Повідомлення -->
                <Border Grid.Row="5" 
                        Background="#FFF3F3F3" 
                        CornerRadius="5" 
                        Padding="10" 
                        Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="❗ Інформація:" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="• Введіть вашу електронну пошту та натисніть 'Перевірити'" 
                                   FontSize="13" 
                                   Margin="0,2"/>
                        <TextBlock Text="• Відповідь на питання повинна бути точною (з урахуванням регістру)" 
                                   FontSize="13" 
                                   Margin="0,2"/>
                        <TextBlock Text="• Новий пароль має бути від 5 до 8 символів" 
                                   FontSize="13" 
                                   Margin="0,2"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Кнопки -->
        <Border Grid.Row="2" 
                Background="#EEEEEE" 
                Padding="10">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="btnCancel" 
                        Content="Скасувати" 
                        Width="120" 
                        Height="35" 
                        Margin="0,0,10,0"
                        Click="BtnCancel_Click"
                        Background="#95A5A6" 
                        Foreground="White"/>
                <Button x:Name="btnVerify" 
                        Content="Перевірити" 
                        Width="120" 
                        Height="35" 
                        Margin="0,0,10,0"
                        Click="BtnVerify_Click"
                        Background="#4A90E2" 
                        Foreground="White"/>
                <Button x:Name="btnSave" 
                        Content="Зберегти" 
                        Width="120" 
                        Height="35"
                        Click="BtnSave_Click"
                        Background="#27AE60" 
                        Foreground="White"
                        IsEnabled="False"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>