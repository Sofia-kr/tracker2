<Window x:Class="t.ChecksData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:t"
        Title="Чеки" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f0f8ff"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#1e90ff" Padding="15">
            <StackPanel>
                <TextBlock Text="ЧЕКИ" 
                         FontSize="24" 
                         FontWeight="Bold" 
                         Foreground="White"
                         HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtInstruction" 
                         Text="Перегляньте та редагуйте ваші записи"
                         FontSize="14" 
                         Foreground="White"
                         HorizontalAlignment="Center"
                         Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Панель перемикання між витратами та доходами -->
        <Border Grid.Row="1" Background="#e6f2ff" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <RadioButton x:Name="rbExpenses" 
                           Content="Витрати" 
                           GroupName="ChecksType"
                           IsChecked="True"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="10,0"
                           Padding="20,5"
                           Checked="RbExpenses_Checked"/>

                <RadioButton x:Name="rbIncome" 
                           Content="Доходи" 
                           GroupName="ChecksType"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="10,0"
                           Padding="20,5"
                           Checked="RbIncome_Checked"/>
            </StackPanel>
        </Border>

        <!-- Таблиця записів -->
        <DataGrid x:Name="dgChecks" 
                 Grid.Row="2" 
                 Margin="20" 
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 CanUserDeleteRows="False"
                 CanUserReorderColumns="False"
                 CanUserResizeColumns="True"
                 CanUserResizeRows="False"
                 CanUserSortColumns="True"
                 SelectionMode="Single"
                 SelectionUnit="FullRow"
                 GridLinesVisibility="Horizontal"
                 RowHeight="60"
                 SelectionChanged="DgChecks_SelectionChanged"
                 CellEditEnding="DgChecks_CellEditEnding">

            <DataGrid.Resources>
                <!-- Стиль для рядка -->
                <Style TargetType="DataGridRow">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#f0f8ff"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#cce7ff"/>
                            <Setter Property="BorderBrush" Value="#1e90ff"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <!-- Стиль для комірок -->
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="TextBlock.TextDecorations" Value="None"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <!-- Додатковий ресурс для TextBlock -->
                <Style TargetType="TextBlock">
                    <Setter Property="TextDecorations" Value="None"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <!-- Колонка зображення -->
                <DataGridTemplateColumn Header="Категорія" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding CategoryImagePathForBinding}" 
                                   Width="40" 
                                   Height="40"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"/>
                            
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Колонка назви категорії -->
                <DataGridTextColumn Header="Назва" 
                                  Width="150" 
                                  Binding="{Binding CategoryName}"
                                  IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="TextDecorations" Value="None"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Колонка коментаря (з можливістю редагування) -->
                <DataGridTemplateColumn Header="Коментар" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Comment}" 
                                       VerticalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextDecorations="None"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}" 
                                     VerticalAlignment="Center"
                                     BorderThickness="1"
                                     BorderBrush="#1e90ff"
                                     Background="White"
                                     Padding="5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <!-- Колонка суми (з можливістю редагування) -->
                <DataGridTemplateColumn Header="Сума" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FormattedAmount}" 
                                       VerticalAlignment="Center"
                                       Foreground="{Binding AmountColor}"
                                       TextDecorations="None"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" 
                                     VerticalAlignment="Center"
                                     BorderThickness="1"
                                     BorderBrush="#1e90ff"
                                     Background="White"
                                     Padding="5"
                                     PreviewTextInput="AmountTextBox_PreviewTextInput"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <!-- Колонка дати -->
                <DataGridTextColumn Header="Дата" 
                                  Width="100" 
                                  Binding="{Binding Date, StringFormat='dd.MM.yyyy'}"
                                  IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="TextDecorations" Value="None"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель кнопок -->
        <Border Grid.Row="3" Background="#e6f2ff" Padding="20">
            <StackPanel x:Name="pnlButtons" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnDelete" 
                       Content="ВИДАЛИТИ ЗАПИС" 
                       Width="150" 
                       Height="40" 
                       Margin="10" 
                       Background="#ff4444" 
                       Foreground="White" 
                       FontWeight="Bold"
                       Visibility="Collapsed"
                       Click="BtnDelete_Click"/>

                <Button x:Name="btnClose" 
                       Content="ЗАКРИТИ" 
                       Width="120" 
                       Height="40" 
                       Margin="10" 
                       Background="#666666" 
                       Foreground="White" 
                       FontWeight="Bold"
                       Click="BtnClose_Click"/>
                <Button x:Name="btnSave" 
        Content="ЗБЕРЕГТИ" 
        Width="120" 
        Height="40" 
        Margin="10" 
        Background="#666666" 
        Foreground="White" 
        FontWeight="Bold"
        Click="BtnClose_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>