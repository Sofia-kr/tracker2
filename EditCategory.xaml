<Window x:Class="t.EditCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагувати категорію" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f0f8ff">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#1e90ff" Padding="15">
            <StackPanel>
                <TextBlock Text="РЕДАГУВАННЯ КАТЕГОРІЙ" 
                         FontSize="24" 
                         FontWeight="Bold" 
                         Foreground="White"
                         HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtInstruction" 
                         Text="Виберіть тип категорій та категорію для редагування"
                         FontSize="14" 
                         Foreground="White"
                         HorizontalAlignment="Center"
                         Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Панель вибору типу -->
        <Border Grid.Row="1" Background="#e6f2ff" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Тип категорій:" 
                          FontSize="14" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"
                          Margin="0,0,10,0"/>

                <ComboBox x:Name="cmbCategoryType" 
                         Width="150" 
                         Height="30"
                         SelectionChanged="CmbCategoryType_SelectionChanged">
                    <ComboBoxItem Content="Витрати" Tag="Expenses"/>
                    <ComboBoxItem Content="Доходи" Tag="Income"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Панель категорій -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="20">
            <WrapPanel x:Name="CategoriesPanel" 
                      HorizontalAlignment="Center"
                      VerticalAlignment="Top">
                <!-- Категорії будуть додаватися програмно -->
            </WrapPanel>
        </ScrollViewer>

        <!-- Панель редагування -->
        <Border Grid.Row="3" Background="#e6f2ff" Padding="20" Margin="20" CornerRadius="10"
                Visibility="Collapsed" x:Name="pnlEdit">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Іконка -->
                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" 
                       Margin="0,0,20,0" 
                       Width="100" 
                       Height="100"
                       Background="White"
                       BorderBrush="#1e90ff"
                       BorderThickness="2"
                       CornerRadius="10">
                    <Image x:Name="imgSelectedIcon" 
                          Stretch="Uniform"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                </Border>

                <!-- Кнопка зміни іконки -->
                <Button Grid.Row="2" Grid.Column="0"
                       Content="Змінити іконку"
                       Width="100"
                       Height="30"
                       Margin="0,10,20,0"
                       Background="#1e90ff"
                       Foreground="White"
                       Click="BtnChangeIcon_Click"/>

                <!-- Назва категорії -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,15">
                    <TextBlock Text="Назва категорії:" 
                             FontSize="14" 
                             FontWeight="Bold"
                             Margin="0,0,0,5"/>
                    <TextBox x:Name="txtCategoryName" 
                           Height="35" 
                           FontSize="14"
                           MaxLength="13"
                           TextChanged="TxtCategoryName_TextChanged"
                           LostFocus="TxtCategoryName_LostFocus"/>
                    <TextBlock x:Name="txtCharCount" 
                             Text="0/13 символів"
                             FontSize="12" 
                             Foreground="Gray"
                             HorizontalAlignment="Right"
                             Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Інформація -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,15">
                    <TextBlock Text="Подвійний клік на назві для редагування" 
                             FontSize="12" 
                             FontStyle="Italic"
                             Foreground="#666666"/>
                    <TextBlock Text="Максимум 13 символів" 
                             FontSize="12" 
                             FontStyle="Italic"
                             Foreground="#666666"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Панель кнопок -->
        <Border Grid.Row="4" Background="#e6f2ff" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnSave" 
                       Content="ЗБЕРЕГТИ" 
                       Width="120" 
                       Height="40" 
                       Margin="10" 
                       Background="#4CAF50" 
                       Foreground="White" 
                       FontWeight="Bold"
                       IsEnabled="False"
                       Click="BtnSave_Click"/>

                <Button x:Name="btnCancel" 
                       Content="СКАСУВАТИ" 
                       Width="120" 
                       Height="40" 
                       Margin="10" 
                       Background="#666666" 
                       Foreground="White" 
                       FontWeight="Bold"
                       Click="BtnCancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>