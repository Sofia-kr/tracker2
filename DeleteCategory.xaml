<Window x:Class="t.DeleteCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Видалити категорію" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#4A90E2" Padding="15">
            <StackPanel>
                <TextBlock Text="ВИДАЛЕННЯ КАТЕГОРІЙ" 
                         FontSize="24" 
                         FontWeight="Bold" 
                         Foreground="White"
                         HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtInstruction" 
                         Text="Виберіть тип категорій та категорію для видалення"
                         FontSize="14" 
                         Foreground="White"
                         HorizontalAlignment="Center"
                         Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Панель вибору типу -->
        <Border Grid.Row="1" Background="#E6F2FF" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Тип категорій:" 
                          FontSize="14" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"
                          Margin="0,0,10,0"/>

                <ComboBox x:Name="cmbCategoryType" 
                         Width="150" 
                         Height="30"
                         SelectionChanged="CmbCategoryType_SelectionChanged">
                    <ComboBoxItem Content="Витрати" Tag="Expenses"/>
                    <ComboBoxItem Content="Доходи" Tag="Income"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Панель категорій -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="20">
            <WrapPanel x:Name="CategoriesPanel" 
                      HorizontalAlignment="Center"
                      VerticalAlignment="Top">
                <!-- Категорії будуть додаватися програмно -->
            </WrapPanel>
        </ScrollViewer>

        <!-- Панель кнопок -->
        <Border Grid.Row="3" Background="#EEEEEE" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnDelete" 
                       Content="ВИДАЛИТИ" 
                       Width="120" 
                       Height="40" 
                       Margin="10" 
                       Background="#E74C3C" 
                       Foreground="White" 
                       FontWeight="Bold"
                       IsEnabled="False"
                       Click="BtnDelete_Click"/>

                <Button x:Name="btnCancel" 
                       Content="ВИЙТИ" 
                       Width="120" 
                       Height="40" 
                       Margin="10" 
                       Background="#95A5A6" 
                       Foreground="White" 
                       FontWeight="Bold"
                       Click="BtnCancel_Click"/>
            </StackPanel>
        </Border>

        <!-- Повідомлення про вибір -->
        <TextBlock x:Name="txtSelectedCategory" 
                  Grid.Row="3" 
                  Margin="20,0,20,70" 
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Bottom"
                  FontSize="16" 
                  FontWeight="Bold" 
                  Foreground="#4A90E2"
                  TextAlignment="Center"/>
    </Grid>
</Window>