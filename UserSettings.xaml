<Window x:Class="t.UserSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:t"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Налаштування користувача" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#4A90E2" Padding="20">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnBack" Content="←" 
                        Width="40" Height="40" 
                        Background="Transparent" BorderBrush="Transparent"
                        Foreground="White" FontSize="20"
                        Click="BtnBack_Click"
                        Margin="0,0,20,0"/>
                <TextBlock Text="НАЛАШТУВАННЯ КОРИСТУВАЧА" 
                          FontSize="28" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Основна форма -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Ліва колонка - основні дані -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <GroupBox Header="Особисті дані" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <TextBlock Text="Ім'я:" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtName" 
                                Height="35" 
                                FontSize="14"
                                MaxLength="20"
                                TextChanged="TxtName_TextChanged"/>
                        <TextBlock x:Name="txtNameCount" 
                                  Text="0/20 символів"
                                  FontSize="12" 
                                  Foreground="Gray"
                                  HorizontalAlignment="Right"
                                  Margin="0,5,0,10"/>

                        <TextBlock Text="Електронна пошта:" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtEmail" 
                                Height="35" 
                                FontSize="14"
                                TextChanged="TxtEmail_TextChanged"/>
                        <TextBlock x:Name="txtEmailStatus" 
                                  Text=""
                                  FontSize="12" 
                                  Foreground="Gray"
                                  HorizontalAlignment="Right"
                                  Margin="0,5,0,10"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Безпека" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <TextBlock Text="Поточний пароль:" FontSize="14" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="txtCurrentPassword" 
                                    Height="35" 
                                    FontSize="14"/>

                        <TextBlock Text="Новий пароль:" FontSize="14" Margin="0,10,0,5"/>
                        <PasswordBox x:Name="txtNewPassword" 
                                    Height="35" 
                                    FontSize="14"/>

                        <TextBlock Text="Підтвердіть новий пароль:" FontSize="14" Margin="0,10,0,5"/>
                        <PasswordBox x:Name="txtConfirmPassword" 
                                    Height="35" 
                                    FontSize="14"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <!-- Права колонка - питання безпеки -->
            <StackPanel Grid.Column="1">
                <GroupBox Header="Питання для відновлення паролю" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <TextBlock Text="Питання:" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtQuestion" 
                                Height="35" 
                                FontSize="14"
                                MaxLength="100"
                                TextChanged="TxtQuestion_TextChanged"/>
                        <TextBlock x:Name="txtQuestionCount" 
                                  Text="0/100 символів"
                                  FontSize="12" 
                                  Foreground="Gray"
                                  HorizontalAlignment="Right"
                                  Margin="0,5,0,10"/>

                        <TextBlock Text="Відповідь:" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtAnswer" 
                                Height="35" 
                                FontSize="14"
                                MaxLength="100"
                                />
                        <TextBlock x:Name="txtAnswerCount" 
                                  Text="0/100 символів"
                                  FontSize="12" 
                                  Foreground="Gray"
                                  HorizontalAlignment="Right"
                                  Margin="0,5,0,10"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Інформація" FontSize="16" FontWeight="SemiBold">
                    <StackPanel Margin="10">
                        <TextBlock Text="❗ Важливо:" 
                                  FontSize="14" FontWeight="Bold" 
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="• Ім'я: максимум 20 символів" 
                                  FontSize="13" Margin="0,2"/>
                        <TextBlock Text="• Пароль: від 5 до 8 символів" 
                                  FontSize="13" Margin="0,2"/>
                        <TextBlock Text="• Питання та відповідь: максимум 100 символів" 
                                  FontSize="13" Margin="0,2"/>
                        <TextBlock Text="• Для зміни пароля потрібен поточний пароль" 
                                  FontSize="13" Margin="0,2"/>
                        <TextBlock Text="• Для зміни питання потрібен поточний пароль" 
                                  FontSize="13" Margin="0,2"/>
                    </StackPanel>
                </GroupBox>

                <!-- Кнопки дій -->
            </StackPanel>
        </Grid>

        <!-- Кнопки збереження та скасування -->
        <Border Grid.Row="2" Background="#EEEEEE" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCancel" 
                       Content="Скасувати" 
                       Width="120" Height="40" 
                       Margin="0,0,15,0"
                       Click="BtnCancel_Click"
                       Background="#95A5A6" Foreground="White"/>
                <Button x:Name="btnSave" 
                       Content="Зберегти всі зміни" 
                       Width="150" Height="40"
                       Click="BtnSave_Click"
                       Background="#27AE60" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>