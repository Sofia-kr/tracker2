<Window x:Class="t.UserRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:t"
        mc:Ignorable="d"
        Title="Реєстрація" Height="750" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#4A90E2" Padding="20">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="ReturnButton" Content="←" 
                       Width="40" Height="40" 
                       Background="Transparent" BorderBrush="Transparent"
                       Foreground="White" FontSize="20"
                       Click="ReturnButton_Click"
                       Margin="0,0,20,0"/>
                <TextBlock Text="РЕЄСТРАЦІЯ КОРИСТУВАЧА" 
                          FontSize="28" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Основна форма -->
        <Grid Grid.Row="1" Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Ліва колонка -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <GroupBox Header="Особисті дані" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <TextBlock Text="Електронна пошта (Gmail):" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="EmailTextBox" 
                                Height="35" 
                                FontSize="14"
                                Padding="5"/>

                        <TextBlock Text="Ім'я:" FontSize="14" Margin="0,15,0,5"/>
                        <TextBox x:Name="NameTextBox" 
                                Height="35" 
                                FontSize="14"
                                Padding="5"
                                MaxLength="20"/>

                        <TextBlock Text="Пароль:" FontSize="14" Margin="0,15,0,5"/>
                        <PasswordBox x:Name="PasswordBox" 
                                    Height="35" 
                                    FontSize="14"
                                    Padding="5"/>
                    </StackPanel>
                </GroupBox>

                <Border Background="#F0F7FF" CornerRadius="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="❗ Вимоги:" 
                                  FontSize="14" FontWeight="Bold" 
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="• Електронна пошта: лише Gmail" 
                                  FontSize="13" Margin="0,2"/>
                        <TextBlock Text="• Ім'я: максимум 20 символів" 
                                  FontSize="13" Margin="0,2"/>
                        <TextBlock Text="• Пароль: від 5 до 8 символів" 
                                  FontSize="13" Margin="0,2"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Права колонка -->
            <StackPanel Grid.Column="1">
                <GroupBox Header="Питання для відновлення паролю" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <TextBlock Text="Питання:" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="SpecialQuestionTextBox" 
                                Height="35" 
                                FontSize="14"
                                Padding="5"/>

                        <TextBlock Text="Відповідь:" FontSize="14" Margin="0,15,0,5"/>
                        <TextBox x:Name="SpecialAnswerTextBox" 
                                Height="35" 
                                FontSize="14"
                                Padding="5"/>

                        <TextBlock Text="*обов'язково запам'ятайте" 
                                  FontSize="12" 
                                  Foreground="#E74C3C"
                                  FontWeight="Bold"
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>

                <Border Background="#F0F7FF" CornerRadius="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="❗ Важливо:" 
                                  FontSize="14" FontWeight="Bold" 
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="• Питання та відповідь використовуються для відновлення паролю" 
                                  FontSize="13" Margin="0,2" TextWrapping="Wrap"/>
                        <TextBlock Text="• Запам'ятайте відповідь на питання" 
                                  FontSize="13" Margin="0,2"/>
                        <TextBlock Text="• Відповідь повинна бути точною" 
                                  FontSize="13" Margin="0,2"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Кнопки -->
        <Border Grid.Row="2" Background="#EEEEEE" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="CancelButton" 
                       Content="Скасувати" 
                       Width="150" Height="45" 
                       Margin="0,0,20,0"
                       Click="CancelButton_Click"
                       Background="#95A5A6" Foreground="White" FontSize="16"/>

                <Button x:Name="RegistrationButton" 
                       Content="Зареєструватися" 
                       Width="200" Height="45" 
                       Click="RegistrationButton_Click"
                       Background="#27AE60" Foreground="White" FontSize="16" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>