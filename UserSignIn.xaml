<Window x:Class="t.UserSignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:t"
        mc:Ignorable="d"
        Width="900" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#4A90E2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock TextDecorations="Underline"
                               Text="{TemplateBinding Content}"
                               Foreground="{TemplateBinding Foreground}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="43*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#4A90E2" Padding="25" Grid.ColumnSpan="2">
            <TextBlock Text="ВХІД"
                      FontSize="28" FontWeight="Bold" 
                      Foreground="White" HorizontalAlignment="Center"/>
        </Border>

        <!-- Основна форма -->
        <Grid Grid.ColumnSpan="2" Margin="0,87,0,0" Grid.RowSpan="2">
            <Border Background="White" CornerRadius="10" Padding="40" Margin="100,0,100,0" VerticalAlignment="Center" Height="467">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="450">

                    <TextBlock Text="Введіть дані для входу" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          HorizontalAlignment="Center" 
                          Margin="0,0,0,30"
                          Foreground="#4A90E2"/>

                    <TextBlock Text="Електронна пошта (Gmail)" 
                          FontSize="14" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,5"
                          Foreground="#333333"/>

                    <TextBox x:Name="GmailTextBox" 
                        Height="40" 
                        FontSize="14"
                        Padding="10"
                        TextChanged="GmailTextBox_TextChanged"/>

                    <TextBlock x:Name="GmailErrorText" 
                          Foreground="#E74C3C" 
                          FontSize="12" 
                          Margin="0,5,0,10"
                          Visibility="Collapsed"/>

                    <TextBlock Text="Пароль" 
                          FontSize="14" 
                          FontWeight="SemiBold"
                          Margin="0,10,0,5"
                          Foreground="#333333"/>

                    <PasswordBox x:Name="PasswordBox" 
                            Height="40" 
                            FontSize="14"
                            Padding="10"/>

                    <TextBlock x:Name="PasswordErrorText" 
                          Foreground="#E74C3C" 
                          FontSize="12" 
                          Margin="0,5,0,10"
                          Visibility="Collapsed"/>

                    <TextBlock x:Name="GeneralErrorText" 
                          Foreground="#E74C3C" 
                          FontSize="12" 
                          Margin="0,10,0,10"
                          TextWrapping="Wrap"
                          Visibility="Collapsed"/>

                    <Button x:Name="SignInButton" 
                       Content="УВІЙТИ" 
                       Height="45" 
                       Background="#27AE60" 
                       Foreground="White" 
                       FontSize="16" 
                       FontWeight="Bold"
                       BorderThickness="0"
                       Margin="0,20,0,10"
                       Click="SignInButton_Click"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,10">
                        <Button x:Name="ForgotPasswordButton" 
                           Content="Забули пароль?" 
                           Style="{StaticResource LinkButtonStyle}"
                           Click="ForgotPasswordButton_Click"/>

                        <TextBlock Text=" | " Margin="10,0" VerticalAlignment="Center" Foreground="#666666"/>

                        <Button x:Name="RegistrationButton" 
                           Content="Реєстрація" 
                           Style="{StaticResource LinkButtonStyle}"
                           Click="RegistrationButton_Click"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>