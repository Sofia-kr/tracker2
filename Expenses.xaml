<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="t.Expenses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:t"
        mc:Ignorable="d"
        Title="Запис" Height="1080" Width="1300"
        KeyDown="Window_KeyDown">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button x:Name="ReturnButton" Content="←" 
                 FontSize="24" Width="50" Height="50" 
                 Background="#FFEAD2" BorderBrush="Gray"
                 Click="ReturnExpenses_Click"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50">
                <TextBlock Text="Оберіть тип операції:" FontSize="20"/>
                <ComboBox x:Name="ChoiceType" Width="250" Height="35" Margin="0,10,0,20"
                          SelectionChanged="ChoiceType_SelectionChanged">
                    <ComboBoxItem Content="Витрати"/>
                    <ComboBoxItem Content="Доходи"/>
                    <ComboBoxItem Content="Заощадження"/>
                </ComboBox>

                <!-- Загальний баланс -->
                <TextBlock Text="Загальний баланс:" FontSize="20"/>
                <TextBox x:Name="GeneralBalance" Width="250" Height="35" 
                      IsReadOnly="True" Text="0.00" Margin="0,10,0,20"/>

                <!-- Введення суми -->
                <TextBlock Text="Введіть суму:" FontSize="20"/>
                <TextBox x:Name="AmountInput" Width="250" Height="35" Margin="0,10,0,20"
                         PreviewTextInput="AmountInput_PreviewTextInput"
                         TextChanged="AmountInput_TextChanged"/>

                <!-- Коментар -->
                <TextBlock Text="Додати коментар:" FontSize="20"/>
                <TextBox x:Name="CommentInput" Width="250" Height="35" 
                      MaxLength="25" Margin="0,10,0,20"/>

                <!-- Календар -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,20">
                    <TextBlock Text="Календар:" FontSize="20" VerticalAlignment="Center"/>
                    <DatePicker x:Name="DatePicker" Width="200" Margin="20,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="0,0,10,0"/>
                        </Style>
                    </StackPanel.Resources>
                    <Button x:Name="SaveButton" Content="Записати" Width="120" Height="40" Click="SaveButton_Click"/>
                    <Button x:Name="CancelButton" Content="Скасувати" Width="120" Height="40" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- Права колонка - Категорії -->
            <Border x:Name="CategoryPanel" Grid.Column="1" 
                    Background="White" 
                    CornerRadius="10" 
                    Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок категорій -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock x:Name="CategoryTitle" Text="Категорії витрат" 
                          FontSize="24" 
                          FontWeight="Bold"
                          Foreground="#FF2C3E50"/>
                        <TextBlock x:Name="lblCategoryCount" 
                          Text="" 
                          FontSize="14" 
                          Foreground="#FF7F8C8D"
                          Margin="10,0,0,0"
                          VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Контейнер для кнопок категорій -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <WrapPanel x:Name="CategoriesPanel" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Center"/>
                    </ScrollViewer>

                    <!-- Інформація -->
                    <Border Grid.Row="2" 
                            Background="#FFECF0F1" 
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock x:Name="InfoTitle" Text="Інформація" 
                              FontSize="14" 
                              FontWeight="Bold"
                              Margin="0,0,0,5"/>
                            <TextBlock x:Name="InfoText1" Text="• Натисніть на категорію для вибору" 
                              FontSize="12"/>
                            <TextBlock x:Name="InfoText2" Text="• Клікніть '+' щоб додати нову категорію" 
                              FontSize="12"/>
                            <TextBlock x:Name="InfoText3" Text="• Максимум 12 категорій на тип" 
                              FontSize="12"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>